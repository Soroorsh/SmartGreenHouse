<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layoutDirection="ltr"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    xmlns:fancy="http://schemas.android.com/apk/res-auto"

    android:background="@drawable/background_btn_r"
    android:orientation="vertical"
    android:paddingLeft="15dp"
    android:paddingRight="15dp"

    tools:context=".DemoFragment">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_weight="1"
        >

       <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="100dp"
          android:orientation="horizontal"
          android:padding="10dp"

          android:layout_marginTop="10dp"
          android:background="@drawable/background_senario"

          >

      <ImageView
          android:layout_width="80dp"
          android:layout_height="wrap_content"
          android:src="@drawable/window"
       />


       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="match_parent"
           android:orientation="vertical"
            android:paddingLeft="10dp"
           android:background="@drawable/background_senario"
           >

           <TextView
             android:layout_width="match_parent"
               android:layout_marginTop="5dp"
             android:layout_height="wrap_content"
             android:text="Fenster Drive Axxent cld"
               android:textSize="20dp"
               android:textColor="@color/Title"

             />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="7dp"
            android:text="1nd floor-Kitchen"
            android:textColor="@color/SubTitle"
            android:textSize="15dp"

            />


       </LinearLayout>

     </LinearLayout>


       <LinearLayout
     android:layout_width="match_parent"
     android:layout_height="100dp"
     android:orientation="horizontal"
     android:padding="10dp"
     android:layout_marginTop="10dp"
     android:background="@drawable/background_senario"

     >

  <ImageView
      android:layout_width="80dp"
      android:layout_height="wrap_content"
      android:src="@drawable/bedroom"
      />


  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:orientation="vertical"
      android:paddingLeft="10dp"
      android:background="@drawable/background_senario"
      >

   <TextView
       android:layout_width="match_parent"
       android:layout_marginTop="5dp"
       android:layout_height="wrap_content"
       android:text="Windows sill ventilator"
       android:textSize="20dp"
       android:textColor="@color/Title"

       />

   <TextView
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:layout_marginTop="7dp"
       android:text="1st floor-Bedroom"
       android:textColor="@color/SubTitle"
       android:textSize="15dp"

       />


  </LinearLayout>

 </LinearLayout>

       <LinearLayout
     android:layout_width="match_parent"
     android:layout_height="100dp"
     android:orientation="horizontal"
     android:padding="10dp"
     android:layout_marginTop="10dp"
     android:background="@drawable/background_senario"

     >

  <ImageView
      android:layout_width="80dp"
      android:layout_height="wrap_content"
      android:src="@drawable/living_room"
      />


  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:orientation="vertical"
      android:paddingLeft="10dp"
      android:background="@drawable/background_senario"
      >

   <TextView
       android:layout_width="match_parent"
       android:layout_marginTop="5dp"
       android:layout_height="wrap_content"
       android:text="Aerovital wall"
       android:textSize="20dp"
       android:textColor="@color/Title"

       />

   <TextView
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:layout_marginTop="7dp"
       android:text="1sd living-room"
       android:textColor="@color/SubTitle"
       android:textSize="15dp"

       />


  </LinearLayout>

 </LinearLayout>


       <LinearLayout
     android:layout_width="match_parent"
     android:layout_height="100dp"
     android:orientation="horizontal"
     android:padding="10dp"
           android:id="@+id/balcony_layot"
     android:layout_marginTop="10dp"
     android:background="@drawable/background_senario"

     >

  <ImageView
      android:layout_width="80dp"
      android:layout_height="wrap_content"
      android:src="@drawable/balcony_door"
      />


  <LinearLayout
      android:layout_width="wrap_content"
      android:layout_height="match_parent"
      android:orientation="vertical"
      android:layout_weight="1"
      android:paddingLeft="10dp"
      android:background="@drawable/background_senario"
      >

   <TextView
       android:layout_width="match_parent"
       android:layout_marginTop="5dp"
       android:layout_height="wrap_content"
       android:text="Balcony door"
       android:textSize="20dp"
       android:id="@+id/enter"
       android:textColor="@color/Title"

       />

   <TextView
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:layout_marginTop="7dp"
       android:text="1sd living-room"
       android:textColor="@color/SubTitle"
       android:textSize="15dp"

       />


  </LinearLayout>

     <ImageView
         android:layout_width="60dp"
         android:layout_height="60dp"
         android:layout_gravity="center_vertical"
         android:background="@drawable/ic_lock_control_open"

         />

 </LinearLayout>

    </LinearLayout>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab"
        app:rippleColor="@color/yellow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_margin="@dimen/fab_margin"
        app:srcCompat="@drawable/ic_add" />


</LinearLayout>
